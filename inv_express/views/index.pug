extends layout

block content
  div(class="grid")
    - for(var i = 0; i < results.length; i++) {
    -   var result = results[i];
    -   var talbeId = "myTable" + i;
    div(class="grid-item")
      table(id=talbeId class="widget-zebra tablesorter-blue")
        thead
          tr
            each val in result.header
              th=val
        tbody
          each vals in result.outputs
            tr
              each val in vals
                td=val
      script.
        $(function () {
          $("##{talbeId}").tablesorter();
        });
    - }
  script.
    $('.grid').masonry({
      itemSelector: '.grid-item',
      columnWidth: 490
    });